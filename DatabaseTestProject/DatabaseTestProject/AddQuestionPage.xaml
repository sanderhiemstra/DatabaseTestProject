<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DatabaseTestProject.AddQuestionPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="questionBodyEntry" Placeholder="Question Body"/>
            <Button x:Name="addQuestionButton" Text="Add Q" Clicked="addQuestionButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>