<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DatabaseTestProject.MainPage">

    <StackLayout>
        <ListView x:Name="QuestionListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Label Text="{Binding QuestionBody}"/>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button x:Name="ViewPageButton" Text="View" Clicked="ViewPageButton_Clicked"/>
        <Button x:Name="AddPageButton" Text="Add" Clicked="AddPageButton_Clicked"/>
    </StackLayout>

</ContentPage>
